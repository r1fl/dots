{
	"eDP-1": {
		"_comment": "laptop",
		"_exec": [
			"bspc monitor {monitor} -g {cfg[mode]}+0+0",
			"for dsk in `bspc query -D`; do bspc desktop $dsk -m {monitor}; done",
			"bspc monitor {monitor} -o I II III IV V VI VII VIII IX X",
			"{env[HOME]}/.fehbg"
		],
		"_flags": [
			"primary"
		],

		"output": "eDP-1",
		"mode": "1920x1080",
		"pos": "0x0",
		"rotate": "normal"
	},

	"default": {
		"_comment": "remove",
		"_exec": "bspc momitor {monitor} -r",
		"_flags": [
			"off"
		]
	}
}
