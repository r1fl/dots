#include ".Xresources.d/spacemacs"

URxvt.scrollBar: false
URxvt.iso14755: false
URxvt.iso14755_52: false

!
! Perl extensions
!

URxvt.perl-lib: /usr/lib/urxvt/perl
URxvt.perl-ext: default
URxvt.perl-ext-common: default,resize-font,url-select

URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

URxvt.tabbed.autohide: true
URxvt.tabbed.tabbar-fg: 8
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    15
URxvt.tabbed.tab-bg:    8
URxvt.tabbed.new-button: false
URxvt.tab-numbers: false

!URxvt.tabbed.tabcmds.1: N|shell
!URxvt.tabbed.tabcmds.2: R|root|su -
!URxvt.tabbed.tabcmds.3: M|mc|mc

!
! Keyboard shortcuts
!

URxvt.keysym.M-u: perl:url-select:select_next

!
! Fonts
!

#define font0 xft:anonymous pro for powerline:style=regular:size=11
#define font1 xft:dejavu sans:pixelsize=18

URxvt.font: font0, font1
URxvt.boldFont: font0, font1
URxvt.letterSpace: 1

! Cursor
Xcursor.theme: Adwaita
Xcursor.size: 12

